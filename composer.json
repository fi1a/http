{
  "name": "fi1a/http",
  "type": "library",
  "description": "PHP абстракция для HTTP-запроса (request), ответа (response), сессии (session) и cookies.",
  "keywords": [],
  "homepage": "https://github.com/fi1a/http",
  "license": "MIT",
  "authors": [
    {
      "name": "Fi1a",
      "email": "fi1a@icloud.com"
    }
  ],
  "require": {
    "php": "^7.3 || ^8",
    "ext-json": "*",
    "fi1a/format": "^2.0",
    "fi1a/collection": "^2.0",
    "fi1a/dependency-injection": "dev-main"
  },
  "suggest": {
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "slevomat/coding-standard": "^8.6",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^4.3",
    "captainhook/captainhook": "^5.11"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Fi1a\\Http\\": "src"
    },
    "files": [
      "src/helpers.php",
      "src/configure.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Fi1a\\Unit\\Http\\": "tests"
    }
  },
  "scripts": {
    "fl:lint": "phpcs --config-set php_version 70300 && phpcs --cache=build/cache/phpcs.cache",
    "fl:phpcbf": "phpcbf --cache=build/cache/phpcbf.cache",
    "fl:test:unit:coverage:ci": "phpunit --coverage-clover build/logs/clover.xml",
    "fl:test:unit": "phpunit",
    "fl:psalm": "psalm",
    "fl:check": [
      "@fl:lint",
      "@fl:psalm",
      "@fl:test:unit"
    ],
    "pre-commit": [
      "@fl:lint",
      "@fl:psalm"
    ],
    "pre-push": [
      "@fl:test:unit"
    ]
  },
  "scripts-descriptions": {
    "fl:lint": "Проверяет весь исходный код на соответсвие стандартам.",
    "fl:phpcbf": "Поправляет весь исходный код на соответсвие стандартам.",
    "fl:test:unit:coverage:ci": "Запускает все модульные тесты и генериреут отчет покрытия Clover.",
    "fl:psalm": "Статический анализ",
    "fl:check": "Полная проверка кода",
    "fl:test:unit": "Модульное тестирование"
  }
}
